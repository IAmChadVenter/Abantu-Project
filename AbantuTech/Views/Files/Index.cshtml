@model IEnumerable<AbantuTech.Models.File>

@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    img {
        display: block;
        margin: auto;
    }
</style>
<img src="~/Content/Template/images/5.jpg" height="110" width=110" />
<h1><p align="center">Uploaded Application Forms</p></h1>

@using (Html.BeginForm("Index", "Files", FormMethod.Get))
{
    <table>
        <tr>
            <td style="padding-right:10px;">Find by file name:  </td>
            <td style="padding-bottom:8px;">@Html.TextBox("SearchString", null, new { @class="form-control"} )</td>
            <td style="padding-left:10px; padding-bottom:8px"><input type="submit" value="Search"/></td>
        </tr>
    </table>
}
<p>
@*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileType)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileType)
            </td>
            <td>
               @* @Html.ActionLink("Edit", "Edit", new { id = item.FileId }) |*@
                @Html.ActionLink("Download", "Download", new { id = item.FileId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.FileId })
            </td>
        </tr>
    }
</table>