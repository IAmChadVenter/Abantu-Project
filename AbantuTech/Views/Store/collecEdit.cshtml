@model AbantuTech.Models.OrderDetail

@{
    ViewBag.Title = "detsEdit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Sent</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Order Details</h4>
