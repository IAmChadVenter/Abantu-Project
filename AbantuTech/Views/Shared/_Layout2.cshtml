</head>
<body>
 
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
 
                </button>
                @Html.ActionLink("Abantu-System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            
            <div class="navbar-collapse collapse">
                @{
                    if (Request.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav">
                            
                            @*<li>@Html.ActionLink("Members", "Index", "Memmbers")</li>
                            <li>@Html.ActionLink("Programmes", "Index", "Programmes")</li>
                            <li>@Html.ActionLink("Meeting", "Index", "Meeting")</li>
                            <li>@Html.ActionLink("Branches", "Index", "Branches")</li>
                            <li>@Html.ActionLink("Committees", "Index", "Committees")</li>*@
                          

                            <li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <ul class="nav navbar-nav navbar-right ">
                                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                        <li>@Html.ActionLink("Admin Menu", "AdminMenu", "Manage")</li>

                                    </ul>
                                }
                            <li>
                                @if (User.IsInRole("Intern"))
                                {
                                    <ul class="nav navbar-nav navbar-right ">
                                        <li>@Html.ActionLink("Intern Menu", "InternMenu", "Manage")</li>
                                        <li>@Html.ActionLink("Store", "Index", "Store")</li>

                                    </ul>
                                }
                            </li>

                            <li>
                                @if (User.IsInRole("Volunteer"))
                                {
                                    <ul class="nav navbar-nav navbar-right ">
                                        <li>@Html.ActionLink("Volunteer Menu", "VolunteerMenu", "Manage")</li>
                                        <li>@Html.ActionLink("Store", "Index", "Store")</li>

                                    </ul>
                                }
                            </li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    }
                    else
                    {
                        <ul class="nav navbar-nav">

                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Apply", "Create", "Apply")</li>
                            <li>@Html.ActionLink("Submit", "Create", "Files")</li>
                            <li>@Html.ActionLink("Store", "Index", "Store")</li>

                        </ul>
                        @Html.Partial("_LoginPartial")

                        }
                    }


            </div>
        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="width:100%">
            <table width="90%">
