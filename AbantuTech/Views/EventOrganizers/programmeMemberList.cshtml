@model IEnumerable<Abantu_System.Models.ProgrammeMember>

@{
    ViewBag.Title = "programmeMemberList";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>List of ProgrammeMembers in this events programme</h2>

<b class="text-success">@ViewBag.StatusMessage</b>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Member.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.organizers.eventTeamId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Programme.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Member.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.organizers.eventTeamId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Programme.Name)
        </td>
        <td>
            @Html.ActionLink("Add To Team","AddToTeam", new { id = item.eventTeamId })
        </td>
    </tr>
}
</table>

