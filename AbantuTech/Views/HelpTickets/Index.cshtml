@model IEnumerable<AbantuTech.Models.HelpTicket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 style="text-align:center;">All Help Tickets</h2>

<p>
    @Html.ActionLink("Create an inquiry ticket", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tCreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.cName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tCreatedOn)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tCreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.cName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tCreatedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TicketId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TicketId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TicketId })
        </td>
    </tr>
}

</table>

<hr/>
<h2 style="text-align:center;">Frequently Asked Questions</h2>

