@model IEnumerable<Abantu_System.Models.Committee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    img {
        display: block;
        margin: auto;
    }
</style>
<img src="~/Content/Template/images/5.jpg" height="110" width="110" />
<h1><p align="center">Committees</p></h1>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Committee_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Committee_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Committee_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Committee_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Committee_ID }) |
            @Html.ActionLink("View Members", "MemberIndex", "Committees", new { id = item.Committee_ID }, null) 
        </td>
    </tr>
}

</table>
